<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/LightGrey"
    >
    <include layout="@layout/view_home_action_bar"/>
    <ScrollView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/invoice_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_box">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invoice Status"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartInvoice"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="6dp" />
                    <LinearLayout
                        android:id="@+id/invoice_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="Overdue"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_danger"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/overdue_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="Unpaid"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_warning"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/unpaid_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="Paid"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_success"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/paid_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/sales_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_box">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sales Order Status"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartSalesOrder"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="6dp" />
                    <LinearLayout
                        android:id="@+id/sales_order_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="To Deliver &amp; Bill"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_danger"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/to_deliver_and_bill_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="To Bill"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_warning"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/to_bill_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">
                            <RelativeLayout
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:text="To Deliver"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="@color/White"
                                    android:background="@drawable/corner_button_success"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_marginLeft="6dp"
                                android:padding="4dp"
                                android:layout_weight="0.5"
                                android:id="@+id/to_deliver_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="12dp"
                                android:text="5 invoices"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_box">
                <TextView

                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Net Sales"
                    android:textSize="18dp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightGrey">
        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>


