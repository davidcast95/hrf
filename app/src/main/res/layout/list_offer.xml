<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/card_box">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/lead_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lead no"
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:textColor="@color/Grey"
                    android:layout_marginRight="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/dollar1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/dollar"/>
                    <ImageView
                        android:id="@+id/dollar2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/dollar"/>
                    <ImageView
                        android:id="@+id/dollar3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/dollar"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/status"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Bill"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:padding="6dp"
                    android:background="@drawable/corner_button_warning"
                    android:textSize="12dp"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/lead_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lead name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_weight="0.5"
            android:textColor="@color/Grey"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/contact_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last contact on"
            android:layout_weight="0.5"
            android:textColor="@color/Grey"
            android:textSize="12dp"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>